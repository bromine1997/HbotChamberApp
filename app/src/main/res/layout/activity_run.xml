<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCCE7E8"
    tools:context=".Activity.RunActivity">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Profile Run"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- MPAndroidChart LineChart -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <!-- Elapsed Time Box -->
    <TextView
        android:id="@+id/elapsedTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="00:00:00"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineChart" />

    <!-- Sensor Readings -->
    <TableLayout
        android:id="@+id/sensorReadings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:stretchColumns="0,1,2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/elapsedTime">

        <!-- First Row: Labels -->
        <TableRow>
            <TextView
                android:id="@+id/chamberPressureLabel"
                android:gravity="center"
                android:text="Chamber Pressure"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/setPointLabel"
                android:gravity="center"
                android:text="Set Point"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/flowRateLabel"
                android:gravity="center"
                android:text=""
                android:textColor="#000000" />
        </TableRow>

        <!-- First Row: Values -->
        <TableRow>
            <TextView
                android:id="@+id/chamberPressure"
                android:gravity="center"
                android:text="test ATA"
                android:textColor="#000000"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/setPointPressure"
                android:gravity="center"
                android:text="test ATA"
                android:textColor="#000000"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/flowRate"
                android:gravity="center"
                android:text=""
                android:textColor="#000000"
                android:textSize="24sp" />
        </TableRow>

        <!-- Second Row: Labels -->
        <TableRow>
            <TextView
                android:id="@+id/oxygenLabel"
                android:gravity="center"
                android:text="Oxygen"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/carbonDioxideLabel"
                android:gravity="center"
                android:text="Carbon Dioxide"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/temperatureLabel"
                android:gravity="center"
                android:text="Temperature"
                android:textColor="#000000" />
        </TableRow>

        <!-- Second Row: Values -->
        <TableRow>
            <TextView
                android:id="@+id/oxygenValue"
                android:gravity="center"
                android:text="test %"
                android:textColor="#000000"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/carbonDioxideValue"
                android:gravity="center"
                android:text="test %"
                android:textColor="#000000"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/temperatureValue"
                android:gravity="center"
                android:text="test Â°C"
                android:textColor="#000000"
                android:textSize="24sp" />
        </TableRow>

        <!-- Third Row: Labels -->
        <TableRow>
            <TextView
                android:id="@+id/humidityLabel"
                android:gravity="center"
                android:text="Humidity"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/placeholderLabel"
                android:gravity="center"
                android:text="Flow"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/placeholderLabel2"
                android:gravity="center"
                android:text="Extra"
                android:textColor="#000000" />
        </TableRow>

        <!-- Third Row: Values -->
        <TableRow>
            <TextView
                android:id="@+id/humidityValue"
                android:gravity="center"
                android:text="test %"
                android:textColor="#000000"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/placeholderValue"
                android:gravity="center"
                android:text="test%"
                android:textColor="#000000"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/placeholderValue2"
                android:gravity="center"
                android:text="test%"
                android:textColor="#000000"
                android:textSize="24sp" />
        </TableRow>
    </TableLayout>

    <!-- States Section -->
    <LinearLayout
        android:id="@+id/statesBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#FFB0E0E6"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@id/controlButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sensorReadings"
        app:layout_constraintWidth_percent="0.33">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="States"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/yellow_circle" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DOOR LOCK"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/yellow_circle" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MANUAL"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/yellow_circle" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RUN"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/yellow_circle" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ALARM"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Third Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/yellow_circle" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="END"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/yellow_circle" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="COMPLETE"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Control Buttons -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/controlButtons"
        android:layout_width="550dp"
        android:layout_height="92dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/statesBox"
        app:layout_constraintTop_toBottomOf="@id/sensorReadings"
        app:layout_constraintWidth_percent="0.34">

        <Button
            android:id="@+id/btnRun"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#1E90FF"
            android:text="RUN"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnPause"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#1E90FF"
            android:text="Pause"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnEnd"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#1E90FF"
            android:text="END"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="#1E90FF"
            android:text="EXIT"
            android:textSize="20sp" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
